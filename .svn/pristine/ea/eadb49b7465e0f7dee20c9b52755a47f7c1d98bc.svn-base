        width: 100%;
        &:after {
            content: '';
            display: block;
            position: absolute;
            top: 12px;
            right: 12px;
            width: 12px;
            height: 12px;
            border-right: 1px solid #aaaaaa;
            border-bottom: 1px solid #aaaaaa;
            transform: rotate(45deg);
        }
    }
