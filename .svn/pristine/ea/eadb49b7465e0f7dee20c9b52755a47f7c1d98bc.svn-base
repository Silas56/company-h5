.evaluate_submit {
    z-index: 2;
    clear: both;
    position: fixed;
    bottom: 0;
    width:100%;
    border-radius: 0;
}

.evaluate_textarea {
    width: 100%;
}

.evaluate_line {
    padding: 10px;
    height: 44px;
    background-color: #FFF;
    font-size: .75rem;
    // border: 1px solid #e3e3e3;
    .evaluate_line_text {
        float: left;
        color: #333333;
        margin: 0 0 .5rem;
        font-size: .7rem;
    }
    .evaluate_line_star {
        margin-left: 20px;
        float: left;
        height: 20px;
        width: 122px;
        background: url(#{$backgroundBaseDir}icon-star-new.png) repeat-x;
        background-position: 0 -20px;
        background-size: auto 40px;
        position: relative;
        .bar-star {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 20px;
            background: url(#{$backgroundBaseDir}icon-star-new.png) repeat-x;
            background-position: 0 0;
            background-size: auto 40px;
            z-index: 1;
            margin: 0;
        }
        .bar-index {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 20px;
            z-index: 2;
            margin: 0;
