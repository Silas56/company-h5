$backgroundBaseDir: '../../images/home/';
$borderColor: #e3e3e3;
.bar,
.bar-nav {
    background-color: #FFF;
}

a {
    color: #333333;
}

.modal-button {
    color: #333333;
}

.page {
    background-color: #f3f3f3;
}

#user_pageCurrent {
    overflow-y: auto
}

.user_head {
    width: 100%;
    height: 150px;
    background:url(#{$backgroundBaseDir}home-bg.jpg) no-repeat;
    -moz-background-size: 100% 100%;
    -webkit-background-size: 100% 100%;
    position: relative;
    overflow: hidden;
    .user_menu {
        position: absolute;
        top: 9px;
        left: 9px;
        background: rgba(0, 0, 0, 0.6);
        width: 40px;
        height: 40px;
        border-radius: 24px;
        a {
            width: 24px;
            height: 24px;
            display: block;
            margin: 7px auto 0 auto;
            background: url(#{$backgroundBaseDir}icons-detail.png) no-repeat -4rem 0.1rem;
            background-size: 5.5rem;
        }
    }
    .user-avator {
        padding-top: 24px;
        img {
            display: block;
            width: 80px;
            height: 80px;
            border-radius: 100px;
            margin: 0 auto;
        }
        p {
            line-height: 26px;
            font-size: 16px;
            color: #fff;
            text-align: center;
            margin: 0;
        }
    }
}

.myOrder {
    margin-top: 12px;
    .list-block {
        margin: 0 0;
        border-bottom: 1px solid #e3e3e3;
        border-top: 0;
        .item-title {
            font-size: 14px;
        }
        .right {
            font-size: 14px;
            color: #8e8e8e;
        }
        ul:after {
            background: none;
        }
    }
}

.order_memu {
    height: 110px;
    background-color: #FFF;
    border-bottom: 1px solid $borderColor;
    a {
        padding-top: 27px;
        display: block;
        width: percentage(1/3);
        float: left;
        .num {
            display: block;
            width: 33px;
            height: 28px;
            background: url(#{$backgroundBaseDir}icons-home.png) no-repeat -32px 2px;
            background-size: 68px auto;
            margin: 0 auto;
            position: relative;
            em {
                display: none;
                width: 18px;
                height: 18px;
                line-height: 18px;
                text-align: center;
                border: 1px solid #ff3333;
                border-radius: 18px;
                font-size: 14px;
                color: #ff3333;
                position: absolute;
                top: -9px;
                right: -9px;
            }
        }
        span {
            display: block;
            text-align: center;
            font-size: 14px;
        }
    }
    .order-pay {
        .num {
            background-position: -32px -40px;
        }
    }
    .order-comment {
        .num {
            background-position: -32px -78px;
        }
    }
}

.myOrder1 {
    margin-top: 12px;
    .list-block {
        margin: 0 0;
        img {
            width: 18px;
            height: 18px;
            position: absolute;
            top: 31%;
        }
        .item-title {
            position: absolute;
            font-size: 16px;
            left: 9%;
            line-height: 29px;
        }
    }
}

.order_mg {
    background-color: rgba(247, 193, 220, 0.43);
    height: 27px;
    position: relative;
    .order_mg_text {
        width: 100%;
        text-align: center;
        height: 25px;
        font-size: .5rem;
        color: #0cb9f3;
        line-height: 27px;
        .time-item {
            color: #ff3333;
        }
    }
}

.order_list {
    padding: 0 10px 10px 10px;
    background-color: #FFF;
    margin-bottom: 10px;
    border: 1px solid $borderColor;
    background: #fff;
}

.tab {
    margin-top: 10px;
    .content_heading {
        overflow-y: auto;
        border-bottom: 1px solid #e3e3e3;
        .heading_left {
            float: left;
            .head_num {
                font-size: 13px;
                line-height: 36px;
            }
            .head_true {
                font-size: 14px;
                font-weight: bold;
            }
        }
        .heading_right {
            line-height: 36px;
            color: #0cb9f3;
            font-size: 14px;
            display: block;
            float: right;
        }
    }
    .content_mid {
        overflow-y: auto;
        border-bottom: 1px solid #e3e3e3;
        margin-top: 16px;
        .mid_left {
            width: 20%;
            float: left;
            margin-bottom: 9px;
            .mid_img {
                width: 100%;
                float: left;
                img {
                    width: 100%;
                    height: 100%;
                }
            }
        }
        .mid_right {
            padding-left: 10px;
            width: 80%;
            float: left;
            margin-bottom: 16px;
            .mid_title {
                .title_span {
                    width: 80%;
                    float: left;
                    word-break: break-all;
                    font-size: 10px;
                    font-weight: bold;
                }
            }
            .mid_specifications {
                .s_left {
                    text-align: right;
                    width: 20%;
                    float: right;
                    .s_left_money {
                        font-size: 10px;
                    }
                    .s_left_num {
                        font-size: 10px;
                    }
                }
                .s_right {
                    width: 100%;
                    float: left;
                    font-size: 10px;
                    color: #8e8e8e;
                    .s_right_p {
                        margin: 0;
                        float: left;
                        width: 60px;
                    }
                }
            }
        }
    }
    .content_footing {
        margin-top: 10px;
        overflow-y: auto;
        .foot_tex {
            float: left;
            font-size: 10px;
            color: #8e8e8e;
            strong {
                color: #222;
            }
        }
        .r_btn {
            font-size: 12px;
            float: right;
            border-radius: 0;
            margin-right: 5px;
        }
        .refundStatus {
            color: #0cb9f3;
            font-size: 14px;
            display: block;
            float: right;
        }
    }
}

#notpay_tabs {
    #tab1 {
        #notpay_order_list {
